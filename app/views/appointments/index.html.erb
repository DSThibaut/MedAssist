    </div>
  </div>

  <div class="barre-separation"></div>

    <% @appointments.each do |appointment| %>
  <div class="rdv-medical">

      <div class="rdv-info">

        <div class="rdv-content">
          <div class="nom-adresse-rdv">
            <h5><%= appointment.medical_center.name %></h5>
            <p><%= appointment.medical_center.address %></p>
          </div>

          <div class="date-rdv">
            <p><%= translate_day(appointment.date.strftime("%A")) + " " + appointment.date.strftime("%d") + " " + translate_month(appointment.date.strftime("%B")) + " " + appointment.date.strftime("%H:%M")  %></p>
          </div>
        </div>

        <div class="btn-suppr-modif-rdv">
          <%= link_to image_tag("editer_ico.svg"), edit_appointment_path(appointment.id) %>
          <%= link_to image_tag("supprimer_ico.svg"), delete_appointment_path(appointment.id), data: { turbo_method: :delete } %>
        </div>

      </div>

  </div>
    <% end %>

  <div class="barre-separation" id="barreFooter"></div>

  <div class="ajouter-rdv">
    <%= link_to 'Ajouter un RDV', medical_centers_path, id: "ajouter-rdv-btn" %>
  </div>

</div>
