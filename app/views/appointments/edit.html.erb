<div class="container-page-modif-rdv" data-controller="flatpickr">

  <div class="barre-separation-rdv-new"></div>

  <div id="details-rdv-titre">
    <p>DÃ©tails du rendez-vous :</p>
  </div>

  <div class="details-rdv-gris">

    <div class="champ-prerempli-rdv">
      <%= @medical_center.name %>
    </div>

    <div class="champ-prerempli-rdv">
      <p><%= @medical_center.address %></p>
    </div>

    <div class="date-champ">
      <%= simple_form_for [@medical_center, @appointment] do |f| %>
        <%= f.input :date, as: :string,
                          required: false,
                          input_html: { id: "date", data: { flatpickr_target: "date"}} %>
        <%= f.input :hour, collection: 0..23, required: false, label: "Heure" %>
        <%= f.input :minutes, collection: [0, 10, 20, 30, 40, 50], required: false %>
    </div>
  </div>

    <div class="emplacements-btn-rdv">
      <%= f.submit "Sauvegarder", class: "btn-ajouter-rdv" %>
      <%= link_to "Annuler", appointments_path, class: "btn-annuler-rdv" %>

    </div>
      <% end %>

</div>
